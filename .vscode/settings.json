{
  "saveAndRun": {
    "commands": [
      {
        "match": "\\.scss$",
        "cmd": "stylelint '**/*.scss' --fix"
      }
    ]
  },
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    //   // {
    //   //   "language": "html",
    //   //   "autoFix": false
    //   // },
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "vetur.validation.script": false
}
